<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-tools text-primary"></i>
        Tipos de Serviço
      </h1>
      <%= link_to "Novo Tipo de Serviço", new_service_type_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <% if @service_types.any? %>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Nome</th>
                  <th>Categoria</th>
                  <th>Preço Padrão</th>
                  <th>Duração Est.</th>
                  <th>Status</th>
                  <th>Criado em</th>
                  <th width="200">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @service_types.each do |service_type| %>
                  <tr>
                    <td>
                      <span class="badge bg-light text-dark">#<%= service_type.id %></span>
                    </td>
                    <td>
                      <strong><%= service_type.name %></strong>
                      <% if service_type.description.present? %>
                        <br><small class="text-muted"><%= truncate(service_type.description, length: 50) %></small>
                      <% end %>
                    </td>
                    <td>
                      <% if service_type.category.present? %>
                        <span class="badge bg-info"><%= service_type.category.humanize %></span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="fw-bold text-success">
                        R$ <%= number_with_delimiter(service_type.default_price_cents / 100.0, delimiter: '.', separator: ',') %>
                      </span>
                    </td>
                    <td>
                      <% if service_type.estimated_duration_minutes.present? %>
                        <span class="badge bg-secondary">
                          <i class="fas fa-clock"></i>
                          <%= pluralize(service_type.estimated_duration_minutes, 'min') %>
                        </span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <% if service_type.active? %>
                        <span class="badge bg-success">Ativo</span>
                      <% else %>
                        <span class="badge bg-secondary">Inativo</span>
                      <% end %>
                    </td>
                    <td>
                      <small class="text-muted">
                        <%= service_type.created_at.strftime("%d/%m/%Y") %>
                      </small>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <%= link_to service_type, class: "btn btn-sm btn-outline-primary", 
                            title: "Ver serviço" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_service_type_path(service_type), class: "btn btn-sm btn-outline-secondary",
                            title: "Editar serviço" do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to service_type, method: :delete, 
                            class: "btn btn-sm btn-outline-danger",
                            title: "Excluir serviço",
                            confirm: "Tem certeza que deseja excluir este tipo de serviço?" do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-tools fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhum tipo de serviço cadastrado</h5>
            <p class="text-muted mb-4">Comece criando os serviços oferecidos pela oficina.</p>
            <%= link_to "Criar Tipo de Serviço", new_service_type_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 