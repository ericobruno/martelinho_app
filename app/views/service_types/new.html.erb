<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-plus text-primary"></i>
        Novo Tipo de Serviço
      </h1>
      <%= link_to "Voltar", service_types_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <%= form_with model: @service_type, local: true, class: "needs-validation", novalidate: true do |form| %>
      <% if @service_type.errors.any? %>
        <div class="alert alert-danger mb-4">
          <h6><i class="fas fa-exclamation-triangle"></i> Erro ao salvar tipo de serviço:</h6>
          <ul class="mb-0">
            <% @service_type.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="fas fa-info-circle"></i>
            Informações do Serviço
          </h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-8">
              <%= form.label :name, "Nome do Serviço *", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", 
                  placeholder: "Ex: Troca de óleo, Alinhamento, Balanceamento...", required: true %>
              <div class="invalid-feedback">
                Por favor, informe o nome do serviço.
              </div>
            </div>

            <div class="col-md-4">
              <%= form.label :active, "Status *", class: "form-label" %>
              <%= form.select :active, 
                  options_for_select([
                    ['Ativo', true],
                    ['Inativo', false]
                  ], @service_type.active),
                  {}, { class: "form-select", required: true } %>
            </div>

            <div class="col-md-6">
              <%= form.label :category, "Categoria", class: "form-label" %>
              <%= form.select :category, 
                  options_for_select([
                    ['', ''],
                    ['Mecânica', 'mechanical'],
                    ['Elétrica', 'electrical'],
                    ['Funilaria', 'bodywork'],
                    ['Pintura', 'painting'],
                    ['Pneus e Rodas', 'tires'],
                    ['Ar Condicionado', 'air_conditioning'],
                    ['Suspensão', 'suspension'],
                    ['Freios', 'brakes'],
                    ['Motor', 'engine'],
                    ['Transmissão', 'transmission'],
                    ['Outro', 'other']
                  ], @service_type.category),
                  { prompt: "Selecione uma categoria" }, 
                  { class: "form-select" } %>
            </div>

            <div class="col-md-6">
              <%= form.label :default_price_cents, "Preço Padrão *", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">R$</span>
                <%= form.number_field :default_price_cents, class: "form-control", 
                    step: 0.01, min: 0, required: true,
                    placeholder: "0,00" %>
              </div>
              <div class="form-text">
                Preço padrão cobrado por este serviço.
              </div>
              <div class="invalid-feedback">
                Por favor, informe o preço padrão.
              </div>
            </div>

            <div class="col-md-6">
              <%= form.label :estimated_duration_minutes, "Duração Estimada (minutos)", class: "form-label" %>
              <%= form.number_field :estimated_duration_minutes, class: "form-control", 
                  min: 1, placeholder: "Ex: 60, 120, 180..." %>
              <div class="form-text">
                Tempo estimado para conclusão do serviço.
              </div>
            </div>

            <div class="col-12">
              <%= form.label :description, "Descrição", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 4,
                  placeholder: "Descreva detalhes sobre este serviço, procedimentos, observações..." %>
              <div class="form-text">
                Informações adicionais sobre este serviço (opcional).
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="d-flex gap-2">
            <%= form.submit "Criar Tipo de Serviço", class: "btn btn-primary" %>
            <%= link_to "Cancelar", service_types_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Convert price input from cents to currency format
  const priceInput = document.querySelector('#service_type_default_price_cents');
  if (priceInput) {
    priceInput.addEventListener('input', function() {
      // This field expects cents, so multiply by 100 on form submission
      // But display as currency for user convenience
    });
    
    // Convert cents to currency on page load if editing
    if (priceInput.value && priceInput.value > 0) {
      priceInput.value = (priceInput.value / 100).toFixed(2);
    }
    
    // Convert back to cents before form submission
    priceInput.closest('form').addEventListener('submit', function() {
      const value = parseFloat(priceInput.value) || 0;
      priceInput.value = Math.round(value * 100);
    });
  }
});
</script> 