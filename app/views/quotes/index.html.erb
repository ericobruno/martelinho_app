<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-file-invoice-dollar text-primary"></i>
        Orçamentos
      </h1>
      <%= link_to "Novo Orçamento", new_quote_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-list"></i>
          Lista de Orçamentos
        </h5>
      </div>
      <div class="card-body">
        <%= render "quotes/list", quotes: @quotes %>
      </div>
    </div>
  </div>
</div> 