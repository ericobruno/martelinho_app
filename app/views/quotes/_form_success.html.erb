<div class="card border-success">
  <div class="card-body text-center">
    <div class="mb-4">
      <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
    </div>
    
    <h4 class="text-success mb-3">
      <i class="fas fa-file-invoice-dollar me-2"></i>
      Orçamento Criado com Sucesso!
    </h4>
    
    <div class="alert alert-success">
      <strong>Orçamento #<%= quote.id %></strong> foi criado para o veículo 
      <strong><%= quote.vehicle.license_plate %></strong>
      (<%= quote.vehicle.vehicle_brand.name %> <%= quote.vehicle.vehicle_model.name %>)
    </div>
    
    <div class="row mb-4">
      <div class="col-md-6">
        <h6><i class="fas fa-user me-2"></i>Cliente</h6>
        <p class="mb-1"><strong><%= quote.vehicle.customer.name %></strong></p>
        <p class="mb-0 text-muted"><%= quote.vehicle.customer.cpf_cnpj %></p>
      </div>
      <div class="col-md-6">
        <h6><i class="fas fa-car me-2"></i>Veículo</h6>
        <p class="mb-1"><strong><%= quote.vehicle.license_plate %></strong></p>
        <p class="mb-0 text-muted">
          <%= quote.vehicle.vehicle_brand.name %> <%= quote.vehicle.vehicle_model.name %> 
          <% if quote.vehicle.year %>(<%= quote.vehicle.year %>)<% end %>
        </p>
      </div>
    </div>
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
      <%= link_to quote_path(quote), class: "btn btn-primary btn-lg me-md-2" do %>
        <i class="fas fa-eye me-2"></i>
        Ver Orçamento
      <% end %>
      
      <%= link_to new_quote_path, class: "btn btn-outline-secondary btn-lg me-md-2" do %>
        <i class="fas fa-plus me-2"></i>
        Novo Orçamento
      <% end %>
      
      <%= link_to quotes_path, class: "btn btn-outline-primary btn-lg" do %>
        <i class="fas fa-list me-2"></i>
        Listar Orçamentos
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add some celebration animation
  const checkIcon = document.querySelector('.fa-check-circle');
  if (checkIcon) {
    checkIcon.style.transform = 'scale(0)';
    setTimeout(() => {
      checkIcon.style.transition = 'transform 0.5s ease-in-out';
      checkIcon.style.transform = 'scale(1)';
    }, 100);
  }
});
</script> 