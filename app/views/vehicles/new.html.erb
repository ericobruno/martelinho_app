<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-car text-primary"></i>
        Novo Veículo
      </h1>
      <%= link_to "Voltar", vehicles_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-form"></i>
          Dados do Veículo
        </h5>
      </div>
      <div class="card-body">
        <%= form_with model: [@customer, @vehicle].compact, local: true, class: "row g-3" do |form| %>
          <% if @vehicle.errors.any? %>
            <div class="col-12">
              <div class="alert alert-danger">
                <h6><i class="fas fa-exclamation-triangle"></i> Erro ao salvar veículo:</h6>
                <ul class="mb-0">
                  <% @vehicle.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="col-md-6">
            <%= form.label :license_plate, "Placa *", class: "form-label" %>
            <%= form.text_field :license_plate, class: "form-control", required: true, placeholder: "ABC-1234" %>
          </div>

          <% unless @customer %>
            <div class="col-md-6">
              <%= form.label :customer_id, "Cliente *", class: "form-label" %>
              <%= form.collection_select :customer_id, Customer.order(:name), :id, :name, 
                  { prompt: "Selecione um cliente" }, 
                  { class: "form-select", required: true } %>
            </div>
          <% else %>
            <%= form.hidden_field :customer_id, value: @customer.id %>
            <div class="col-md-6">
              <label class="form-label">Cliente</label>
              <div class="form-control-plaintext">
                <i class="fas fa-user text-muted me-1"></i>
                <%= @customer.name %>
              </div>
            </div>
          <% end %>

          <div class="col-md-6">
            <%= form.label :vehicle_brand_id, "Marca *", class: "form-label" %>
            <%= form.collection_select :vehicle_brand_id, @vehicle_brands, :id, :name, 
                { prompt: "Selecione uma marca" }, 
                { class: "form-select", required: true, 
                  data: { action: "change->vehicle-form#loadModels" } } %>
          </div>

          <div class="col-md-6">
            <%= form.label :vehicle_model_id, "Modelo *", class: "form-label" %>
            <%= form.collection_select :vehicle_model_id, [], :id, :name, 
                { prompt: "Primeiro selecione uma marca" }, 
                { class: "form-select", required: true } %>
          </div>

          <div class="col-md-6">
            <%= form.label :year, "Ano *", class: "form-label" %>
            <%= form.number_field :year, class: "form-control", required: true, 
                min: 1900, max: Date.current.year + 1, placeholder: "2020" %>
          </div>

          <div class="col-md-6">
            <%= form.label :color, "Cor *", class: "form-label" %>
            <%= form.text_field :color, class: "form-control", required: true, placeholder: "Branco" %>
          </div>

          <div class="col-12">
            <hr>
            <div class="d-flex gap-2">
              <%= form.submit "Salvar Veículo", class: "btn btn-primary" %>
              <% if @customer %>
                <%= link_to "Cancelar", customer_path(@customer), class: "btn btn-outline-secondary" %>
              <% else %>
                <%= link_to "Cancelar", vehicles_path, class: "btn btn-outline-secondary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 