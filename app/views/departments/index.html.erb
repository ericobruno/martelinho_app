<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-building text-primary"></i>
        Departamentos
      </h1>
      <%= link_to "Novo Departamento", new_department_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <% if @departments.any? %>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Nome</th>
                  <th>Descrição</th>
                  <th>Status</th>
                  <th>Funcionários</th>
                  <th>Criado em</th>
                  <th width="200">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @departments.each do |department| %>
                  <tr>
                    <td>
                      <span class="badge bg-light text-dark">#<%= department.id %></span>
                    </td>
                    <td>
                      <strong><%= department.name %></strong>
                    </td>
                    <td>
                      <% if department.description.present? %>
                        <span class="text-muted"><%= truncate(department.description, length: 50) %></span>
                      <% else %>
                        <span class="text-muted fst-italic">Sem descrição</span>
                      <% end %>
                    </td>
                    <td>
                      <% if department.active? %>
                        <span class="badge bg-success">Ativo</span>
                      <% else %>
                        <span class="badge bg-secondary">Inativo</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge bg-info">
                        <i class="fas fa-users"></i>
                        <%= department.users.count %>
                      </span>
                    </td>
                    <td>
                      <small class="text-muted">
                        <%= department.created_at.strftime("%d/%m/%Y") %>
                      </small>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <%= link_to department, class: "btn btn-sm btn-outline-primary", 
                            title: "Ver departamento" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_department_path(department), class: "btn btn-sm btn-outline-secondary",
                            title: "Editar departamento" do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to department, method: :delete, 
                            class: "btn btn-sm btn-outline-danger",
                            title: "Excluir departamento",
                            confirm: "Tem certeza que deseja excluir este departamento?" do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-building fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhum departamento cadastrado</h5>
            <p class="text-muted mb-4">Comece criando seu primeiro departamento.</p>
            <%= link_to "Criar Departamento", new_department_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 