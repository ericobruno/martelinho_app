<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-industry text-primary"></i>
        <%= @vehicle_brand.name %>
      </h1>
      <div class="d-flex gap-2">
        <%= link_to "Editar", edit_vehicle_brand_path(@vehicle_brand), class: "btn btn-outline-primary" %>
        <%= link_to "Voltar", vehicle_brands_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Brand Information -->
  <div class="col-lg-8">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-info-circle"></i>
          Informações da Marca
        </h5>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label text-muted">Nome da Marca</label>
            <div class="form-control-plaintext fw-bold">
              <%= @vehicle_brand.name %>
            </div>
          </div>
          
          <div class="col-md-6">
            <label class="form-label text-muted">Status</label>
            <div class="form-control-plaintext">
              <% if @vehicle_brand.active? %>
                <span class="badge bg-success">Ativa</span>
              <% else %>
                <span class="badge bg-secondary">Inativa</span>
              <% end %>
            </div>
          </div>
          
          <div class="col-md-6">
            <label class="form-label text-muted">País de Origem</label>
            <div class="form-control-plaintext">
              <% if @vehicle_brand.country.present? %>
                <%= @vehicle_brand.country %>
              <% else %>
                <span class="text-muted">Não informado</span>
              <% end %>
            </div>
          </div>
          
          <div class="col-md-6">
            <label class="form-label text-muted">Criado em</label>
            <div class="form-control-plaintext">
              <%= @vehicle_brand.created_at.strftime("%d/%m/%Y às %H:%M") %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Brand Models -->
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-car"></i>
            Modelos da Marca
            <span class="badge bg-primary ms-2"><%= @vehicle_brand.vehicle_models.count %></span>
          </h5>
          <%= link_to "Novo Modelo", new_vehicle_brand_vehicle_model_path(@vehicle_brand), class: "btn btn-sm btn-outline-primary" %>
        </div>
      </div>
      <div class="card-body">
        <% if @vehicle_brand.vehicle_models.any? %>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>Nome</th>
                  <th>Ano Inicial</th>
                  <th>Ano Final</th>
                  <th>Status</th>
                  <th>Veículos</th>
                  <th width="150">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @vehicle_brand.vehicle_models.each do |model| %>
                  <tr>
                    <td>
                      <strong><%= model.name %></strong>
                    </td>
                    <td>
                      <% if model.year_start.present? %>
                        <span class="badge bg-light text-dark"><%= model.year_start %></span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td>
                      <% if model.year_end.present? %>
                        <span class="badge bg-light text-dark"><%= model.year_end %></span>
                      <% else %>
                        <span class="badge bg-success">Atual</span>
                      <% end %>
                    </td>
                    <td>
                      <% if model.active? %>
                        <span class="badge bg-success">Ativo</span>
                      <% else %>
                        <span class="badge bg-secondary">Inativo</span>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge bg-info">
                        <i class="fas fa-list"></i>
                        <%= model.vehicles.count %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <%= link_to model, class: "btn btn-sm btn-outline-primary", title: "Ver modelo" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                        <%= link_to edit_vehicle_model_path(model), class: "btn btn-sm btn-outline-secondary", title: "Editar modelo" do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to model, method: :delete, 
                            class: "btn btn-sm btn-outline-danger", title: "Excluir modelo",
                            confirm: "Tem certeza que deseja excluir este modelo?" do %>
                          <i class="fas fa-trash"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="fas fa-car fa-2x text-muted mb-3"></i>
            <p class="text-muted">Nenhum modelo cadastrado para esta marca.</p>
            <%= link_to "Adicionar Modelo", new_vehicle_brand_vehicle_model_path(@vehicle_brand), class: "btn btn-outline-primary btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Actions Sidebar -->
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-cog"></i>
          Ações
        </h5>
      </div>
      <div class="card-body d-grid gap-2">
        <%= link_to edit_vehicle_brand_path(@vehicle_brand), class: "btn btn-primary" do %>
          <i class="fas fa-edit"></i> Editar Marca
        <% end %>
        
        <%= link_to new_vehicle_brand_vehicle_model_path(@vehicle_brand), class: "btn btn-outline-success" do %>
          <i class="fas fa-plus"></i> Novo Modelo
        <% end %>
        
        <%= link_to vehicle_brands_path, class: "btn btn-outline-secondary" do %>
          <i class="fas fa-list"></i> Listar Marcas
        <% end %>
        
        <hr>
        
        <%= link_to @vehicle_brand, method: :delete, 
            class: "btn btn-outline-danger",
            confirm: "Tem certeza que deseja excluir esta marca? Todos os modelos e veículos associados também serão removidos." do %>
          <i class="fas fa-trash"></i> Excluir Marca
        <% end %>
      </div>
    </div>

    <!-- Statistics Card -->
    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-chart-bar"></i>
          Estatísticas
        </h5>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <h4 class="text-primary mb-1"><%= @vehicle_brand.vehicle_models.count %></h4>
              <small class="text-muted">Modelos</small>
            </div>
          </div>
          <div class="col-6">
            <h4 class="text-success mb-1"><%= @vehicle_brand.vehicles.count %></h4>
            <small class="text-muted">Veículos</small>
          </div>
        </div>
        <hr>
        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <h4 class="text-info mb-1"><%= @vehicle_brand.vehicle_models.active.count %></h4>
              <small class="text-muted">Modelos Ativos</small>
            </div>
          </div>
          <div class="col-6">
            <h4 class="text-warning mb-1"><%= time_ago_in_words(@vehicle_brand.created_at) %></h4>
            <small class="text-muted">Criado há</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 