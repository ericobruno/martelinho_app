<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-user-plus text-primary"></i>
        Novo Cliente
      </h1>
      <%= link_to "Voltar", customers_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-form"></i>
          Dados do Cliente
        </h5>
      </div>
      <div class="card-body">
        <%= form_with model: @customer, local: true, class: "row g-3" do |form| %>
          <% if @customer.errors.any? %>
            <div class="col-12">
              <div class="alert alert-danger">
                <h6><i class="fas fa-exclamation-triangle"></i> Erro ao salvar cliente:</h6>
                <ul class="mb-0">
                  <% @customer.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="col-md-6">
            <%= form.label :name, "Nome *", class: "form-label" %>
            <%= form.text_field :name, class: "form-control", required: true, placeholder: "Nome completo" %>
          </div>

          <div class="col-md-6">
            <%= form.label :email, "Email", class: "form-label" %>
            <%= form.email_field :email, class: "form-control", placeholder: "email@exemplo.com" %>
          </div>

          <div class="col-md-6">
            <%= form.label :phone, "Telefone", class: "form-label" %>
            <%= form.text_field :phone, class: "form-control", placeholder: "(11) 99999-9999" %>
          </div>

          <div class="col-md-6">
            <%= form.label :cpf_cnpj, "CPF/CNPJ", class: "form-label" %>
            <%= form.text_field :cpf_cnpj, class: "form-control", placeholder: "000.000.000-00 ou 00.000.000/0000-00" %>
          </div>

          <div class="col-12">
            <%= form.label :address, "Endereço", class: "form-label" %>
            <%= form.text_area :address, rows: 3, class: "form-control", placeholder: "Endereço completo" %>
          </div>

          <div class="col-12">
            <hr>
            <div class="d-flex gap-2">
              <%= form.submit "Salvar Cliente", class: "btn btn-primary" %>
              <%= link_to "Cancelar", customers_path, class: "btn btn-outline-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 