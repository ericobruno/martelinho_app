<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h2 mb-0">
        <i class="fas fa-users text-primary"></i>
        Clientes
      </h1>
      <%= link_to "Novo Cliente", new_customer_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="fas fa-list"></i>
      Lista de Clientes
    </h5>
  </div>
  <div class="card-body">
    <% if @customers.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Telefone</th>
              <th>CPF/CNPJ</th>
              <th>Veículos</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td>
                  <strong><%= customer.name %></strong>
                </td>
                <td>
                  <% if customer.email.present? %>
                    <i class="fas fa-envelope text-muted me-1"></i>
                    <%= customer.email %>
                  <% else %>
                    <span class="text-muted">Não informado</span>
                  <% end %>
                </td>
                <td>
                  <% if customer.phone.present? %>
                    <i class="fas fa-phone text-muted me-1"></i>
                    <%= customer.phone %>
                  <% else %>
                    <span class="text-muted">Não informado</span>
                  <% end %>
                </td>
                <td>
                  <% if customer.cpf_cnpj.present? %>
                    <%= customer.cpf_cnpj %>
                  <% else %>
                    <span class="text-muted">Não informado</span>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-info">
                    <%= customer.vehicles.count %> veículo<%= 's' if customer.vehicles.count != 1 %>
                  </span>
                </td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <%= link_to customer_path(customer), class: "btn btn-sm btn-outline-info", title: "Ver" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_customer_path(customer), class: "btn btn-sm btn-outline-warning", title: "Editar" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to customer_path(customer), method: :delete, 
                        class: "btn btn-sm btn-outline-danger", 
                        title: "Excluir",
                        data: { 
                          confirm: "Tem certeza? Esta ação não pode ser desfeita.",
                          turbo_method: :delete 
                        } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhum cliente cadastrado</h5>
        <p class="text-muted">Clique no botão "Novo Cliente" para começar.</p>
      </div>
    <% end %>
  </div>
  <% if @customers.any? %>
    <div class="card-footer text-muted">
      Total: <%= @customers.count %> cliente<%= 's' if @customers.count != 1 %>
    </div>
  <% end %>
</div> 